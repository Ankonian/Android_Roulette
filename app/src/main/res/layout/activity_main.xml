<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/roulette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:src="@drawable/complete_roulette"
        app:layout_constraintTop_toBottomOf="@+id/itemSelected"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="169dp"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/spin_button"
        android:onClick="onClickButtonRotation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roulette" />

    <ImageView
        android:id="@+id/itemSelected"
        android:layout_width="117dp"
        android:layout_height="109dp"
        android:layout_above="@+id/roulette"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wheel_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>